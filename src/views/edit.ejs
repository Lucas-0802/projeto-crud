<!DOCTYPE html>
<html lang="pt-BR">
<%- include('partials/head.ejs') %>
<body>
    <h1><%= title%></h1>

    <%- include('partials/navbar.ejs') %>

    <% if (typeof message !== 'undefined') { %>
     <%= message %>
     <% } %>   

    <form action="/edit/<%= user._id%>" method="post">
        <div>
            <label for="#">Nome:</label>
            <input type="text" name="name" id="name" placeholder="Digite seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label for="#">Idade:</label>
            <input type="text" name="age" id="age" placeholder="Digite sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label for="#">E-mail:</label>
            <input type="text" name="email" id="email" placeholder="Digite seu e-mail" value="<%= user.email %>">
        </div>
        
        <button type="submit">Editar</button>
    </form>

   
   
    <%- include('partials/foot.ejs') %>
</body>
</html>